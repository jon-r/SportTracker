@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<AuthorizeView>
    <Authorized>
        <h3>@context.User.Identity?.Name</h3>

        <form method="post" action="logout" @onsubmit="OnSubmiLogout" @formname="UserLogout">
            <AntiforgeryToken />
            <button type="submit">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <h3>Sign In</h3>
    </NotAuthorized>
</AuthorizeView>

@code {
    async Task OnSubmiLogout()
    {
        await AuthService.Logout();
        NavigationManager.NavigateTo("/login");
    }
}